<odoo>
    <!-- Acción del modelo -->
    <record id="action_mail_purchase_inbox" model="ir.actions.act_window">
        <field name="name">Bandeja de Correos</field>
        <field name="res_model">mail.purchase.inbox</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No hay correos aún
            </p>
        </field>
    </record>

    <!-- Vista lista -->
    <record id="view_mail_purchase_inbox_tree" model="ir.ui.view">
        <field name="name">mail.purchase.inbox.tree</field>
        <field name="model">mail.purchase.inbox</field>
        <field name="arch" type="xml">
            <list>
                <field name="email_from"/>
                <field name="subject"/>
                <field name="processed"/>
                <field name="create_date"/>
            </list>
        </field>
    </record>

    <!-- Vista formulario -->
    <record id="view_mail_purchase_inbox_form" model="ir.ui.view">
        <field name="name">mail.purchase.inbox.form</field>
        <field name="model">mail.purchase.inbox</field>
        <field name="arch" type="xml">
            <form>
                 <header>
                    <button name="process_pdf_and_create_po"
                            type="object"
                            string="Procesar PDF y crear OC"
                            class="btn-primary"
                            invisible="processed"
                            />
                    <button name="sync_chatter_attachments"
                        string="Obtener adjuntos"
                        type="object"
                        class="btn-primary"
                        />
                </header>
                <sheet>
                    <group>
                        <field name="email_from"/>
                        <field name="subject"/>
                        <field name="body"/>
                        <field name="processed" readonly="1"/>
                    </group>
                    <group>
                        <field name="attachment_ids" widget="many2many_binary" readonly="1"/>
                    </group>
                </sheet>
                <chatter>
                    <field name="message_follower_ids"/>
                    <field name="message_ids"/>
                </chatter>
            </form>
        </field>
    </record>

    <menuitem id="menu_mail_purchase_root"
              name="Inbox OC"
              sequence="10"
              web_icon="auto_purchase_from_email,static/description/icon.png"
              />

    <menuitem id="menu_mail_purchase_inbox"
              name="Bandeja de Entrada"
              parent="menu_mail_purchase_root"
              action="action_mail_purchase_inbox"
              sequence="1"
              />

</odoo>
