<odoo>
    <record id="view_ftp_exporter_tree" model="ir.ui.view">
        <field name="name">ftp.exporter.tree</field>
        <field name="model">ftp.exporter</field>
        <field name="arch" type="xml">
            <tree string="Exportaciones FTP">
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="view_ftp_exporter_form" model="ir.ui.view">
        <field name="name">ftp.exporter.form</field>
        <field name="model">ftp.exporter</field>
        <field name="arch" type="xml">
            <form string="Exportador FTP">
                <header>
                    <button name="action_test_export" type="object" string="Probar ExportaciÃ³n" class="btn-primary"/>
                </header>
                <sheet>
                    <group>
                        <field name="name" required="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_ftp_exporter" model="ir.actions.act_window">
        <field name="name">Exportaciones FTP</field>
        <field name="res_model">ftp.exporter</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
    </record>

</odoo>
