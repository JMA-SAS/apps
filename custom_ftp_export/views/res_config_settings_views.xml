<odoo>
    <record id="view_res_config_settings_custom_ftp" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.custom.ftp</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base_setup.res_config_settings_view_form"/>
        <field name="arch" type="xml">

            <xpath expr="//block[@name='performance']" position="before">
                <block title="FTP Export" name="ftp_export_block">
                    <setting id="ftp_host_setting" string="FTP Host">
                        <field name="ftp_host"/>
                    </setting>
                    <setting id="ftp_user_setting" string="FTP User">
                        <field name="ftp_user"/>
                    </setting>
                    <setting id="ftp_pass_setting" string="FTP Password">
                        <field name="ftp_pass" password="True"/>
                    </setting>
                    <setting id="ftp_path_setting" string="FTP Path">
                        <field name="ftp_path"/>
                    </setting>
                </block>
            </xpath>

        </field>
    </record>
</odoo>
