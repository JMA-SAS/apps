<odoo>
    <!-- Vista tipo tree -->
    <record id="view_ftp_export_history_tree" model="ir.ui.view">
        <field name="name">ftp.export.history.tree</field>
        <field name="model">ftp.export.history</field>
        <field name="arch" type="xml">
            <tree create="false">
                <field name="file_name"/>
                <field name="export_date"/>
                <field name="status"/>
                <field name="message"/>
                <field name="file_binary" filename="file_name"/>
            </tree>
        </field>
    </record>

    <!-- Vista tipo form -->
    <record id="view_ftp_export_history_form" model="ir.ui.view">
        <field name="name">ftp.export.history.form</field>
        <field name="model">ftp.export.history</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="file_name" readonly="1"/>
                    <field name="export_date" readonly="1"/>
                    <field name="status" readonly="1"/>
                    <field name="message" readonly="1"/>
                    <field name="file_binary" filename="file_name" readonly="1"/>
                </group>
            </form>
        </field>
    </record>

    <!-- Acción que abre la vista -->
    <record id="action_ftp_export_history" model="ir.actions.act_window">
        <field name="name">Histórico de Exportaciones FTP</field>
        <field name="res_model">ftp.export.history</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p>Consulta el historial de archivos generados y enviados por FTP.</p>
        </field>
    </record>

    <!-- Submenú del historial -->
    <menuitem id="menu_ftp_export_history"
              name="Histórico de Exportaciones"
              parent="menu_ftp_root"
              action="action_ftp_export_history"
              sequence="30"/>
</odoo>
