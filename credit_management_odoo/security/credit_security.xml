<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Reglas de seguridad para gestión de crédito -->
    
    <!-- Regla para que los usuarios solo puedan ver/editar crédito de sus propios clientes -->
    <record id="credit_management_partner_rule" model="ir.rule">
        <field name="name">Credit Management: Own Customers Only</field>
        <field name="model_id" ref="base.model_res_partner"/>
        <field name="domain_force">['|', ('user_id', '=', user.id), ('user_id', '=', False)]</field>
        <field name="groups" eval="[(4, ref('sales_team.group_sale_salesman'))]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="False"/>
        <field name="perm_create" eval="False"/>
        <field name="perm_unlink" eval="False"/>
    </record>

    <!-- Los contadores y administradores pueden ver todos los clientes -->
    <record id="credit_management_partner_rule_accountant" model="ir.rule">
        <field name="name">Credit Management: All Customers for Accountants</field>
        <field name="model_id" ref="base.model_res_partner"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('account.group_account_manager')), (4, ref('base.group_system'))]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="True"/>
        <field name="perm_unlink" eval="False"/>
    </record>

</odoo>

