<odoo>
    <record id="view_move_form_inherit_credit_alert" model="ir.ui.view">
        <field name="name">account.move.form.inherit.credit.alert</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form" />
        <field name="arch" type="xml">
            <!-- Insertamos el campo justo despuÃ©s del campo 'partner_id' -->
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="credit_warning" widget="html" readonly="1" colspan="4"/>
            </xpath>
        </field>
    </record>
</odoo>
