<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_partner_form_inherit_credit_management" model="ir.ui.view">
        <field name="name">res.partner.form.inherit.credit.management</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <notebook position="inside">
                <page string="💳 Crédito" name="credit_management_page"
                      groups="account.group_account_manager,base.group_system">
                    
                    <group col="2">

                        <!-- Columna IZQUIERDA: COMPRAS -->
                        <group>
                            <separator string="🛍️ CRÉDITO EN COMPRAS" colspan="2"/>
                            <field name="enable_credit_validation_purchase"/>
                            <field name="credit_limit_purchase"
                                   widget="monetary"
                                   options="{'currency_field': 'company_currency_id'}"/>
                            <field name="total_credit_used_purchase"
                                   widget="monetary"
                                   readonly="1"
                                   options="{'currency_field': 'company_currency_id'}"/>
                            <field name="available_credit_purchase"
                                   widget="monetary"
                                   readonly="1"
                                   options="{'currency_field': 'company_currency_id'}"/>
                        </group>

                        <!-- Columna DERECHA: VENTAS -->
                        <group>
                            <separator string="🛒 CRÉDITO EN VENTAS" colspan="2"/>
                            <field name="enable_credit_validation"/>
                            <field name="credit_limit"
                                   widget="monetary"
                                   options="{'currency_field': 'company_currency_id'}"/>
                            <field name="total_credit_used"
                                   widget="monetary"
                                   readonly="1"
                                   options="{'currency_field': 'company_currency_id'}"/>
                            <field name="available_credit"
                                   widget="monetary"
                                   readonly="1"
                                   options="{'currency_field': 'company_currency_id'}"/>
                        </group>

                    </group>
                </page>
            </notebook>
        </field>
    </record>
</odoo>



