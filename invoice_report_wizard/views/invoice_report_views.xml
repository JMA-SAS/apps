<?xml version="1.0" encoding="UTF-8"?>
<odoo>

  <record id="view_invoice_report_line_tree_custom" model="ir.ui.view">
    <field name="name">invoice.report.line.tree.custom</field>
    <field name="model">invoice.report.line</field>
    <field name="arch" type="xml">
        <tree string="Líneas de Reporte de Facturas" create="false">
            <field name="move_name"/>
            <field name="partner_id"/>
            <field name="payment_method"/>
            <field name="amount_total"/>
        </tree>
    </field>
  </record>

  <!-- view -->
  <record id="view_invoice_report_wizard" model="ir.ui.view">
    <field name="name">invoice.report.wizard.form</field>
    <field name="model">invoice.report.wizard</field>
    <field name="arch" type="xml">
      <form string="Generar Reporte Consolidado de Facturas">
        <sheet>
          <group>
            <field name="date_start" required="1"/>
            <field name="date_end" required="1"/>
            <field name="pos_ids" widget="many2many_tags" options="{'no_create': True}"/>
          </group>
          <footer>
            <button name="action_generate_tree"
                    type="object"
                    string="🔍 Ver en pantalla"
                    class="btn-secondary"/>
            <button name="action_generate_pdf"
                    type="object"
                    string="🧾 Generar PDF"
                    class="btn-primary"/>
            <button string="❌ Cancelar" special="cancel" class="btn-link"/>
          </footer>
        </sheet>
      </form>
    </field>
  </record>

  <!-- Action -->
  <record id="action_invoice_report_wizard" model="ir.actions.act_window">
    <field name="name">Reporte de Facturas</field>
    <field name="res_model">invoice.report.wizard</field>
    <field name="view_mode">form</field>
    <field name="target">new</field>
  </record>

</odoo>
